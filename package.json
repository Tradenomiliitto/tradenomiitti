{
  "name": "tradenomiitti",
  "version": "1.0.0",
  "description": "Löydä elämäsi tradenomi",
  "main": "index.js",
  "scripts": {
    "preansible": "./conf/preinstall.sh",
    "serverinstallbase": "./conf/serverinstallbase.sh",
    "compilelocal": "cd frontend && mkdir -p static/images && elm make src/Main.elm --output static/elm.js && browserify -t babelify js/main.js --outfile static/main.js && node-sass --precision 8 --include-path ../node_modules/bootstrap-sass/assets/stylesheets -r stylesheets/styles.scss | postcss --use autoprefixer -o static/styles.css && cp assets/* ../node_modules/bootstrap-sass/assets/fonts/bootstrap/* ../node_modules/font-awesome/fonts/* ../conf/assets/* static/ && cp index.html static/",
    "lint": "eslint server/",
    "start": "node server/index.js",
    "compilefrontend": "cd frontend && elm make src/Main.elm --output /srv/static/elm.js && browserify -t babelify js/main.js --outfile /srv/static/main.js",
    "compilescss": "node-sass --precision 8 --include-path node_modules/bootstrap-sass/assets/stylesheets -r frontend/stylesheets/styles.scss | postcss --use autoprefixer -o /srv/static/styles.css",
    "compileassets": "cp frontend/assets/* node_modules/bootstrap-sass/assets/fonts/bootstrap/* node_modules/font-awesome/fonts/* /srv/static/ && ./conf/copy-index-with-ga.sh",
    "deploy": "ansible-playbook conf/deploy.yml -i conf/inventory.ini --limit ${ENV_TO_DEPLOY:-dev} --tags 'deploy'",
    "uploadanddeploy": "ansible-playbook conf/deploy.yml -i conf/inventory.ini --limit ${ENV_TO_DEPLOY:-dev}",
    "seed-db": "knex migrate:latest && knex seed:run",
    "test": "DISABLE_SEBACON=true ENABLE_EMAIL_SENDING=false mocha server/**/*.js --exit",
    "testFrontend": "cd frontend && elm-test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/futurice/tradenomiitti.git"
  },
  "author": "",
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/futurice/tradenomiitti/issues"
  },
  "homepage": "https://github.com/futurice/tradenomiitti#readme",
  "dependencies": {
    "@babel/core": "^7.7.4",
    "@babel/preset-env": "^7.7.4",
    "autocomplete.js": "^0.37.0",
    "autoprefixer": "^9.7.3",
    "babel-polyfill": "^6.26.0",
    "babelify": "^10.0.0",
    "body-parser": "^1.19.0",
    "bootstrap-sass": "^3.4.1",
    "browserify": "^16.5.0",
    "cookie-session": "^1.3.3",
    "cropperjs": "^1.5.6",
    "d3-timer": "^1.0.10",
    "elm": "^0.19.1-3",
    "elm-format": "^0.8.2",
    "elm-test": "^0.19.1",
    "emailjs": "^2.2.0",
    "express": "^4.17.1",
    "express-fileupload": "^1.1.6",
    "file-type": "^12.4.0",
    "font-awesome": "^4.7.0",
    "gm": "^1.23.1",
    "json2csv": "^4.5.4",
    "knex": "^0.20.3",
    "lodash.groupby": "^4.6.0",
    "moment": "^2.24.0",
    "node-sass": "^4.13.0",
    "node-schedule": "^1.3.2",
    "pg": "^7.14.0",
    "postcss-cli": "^6.1.3",
    "request": "^2.85.0",
    "request-promise-native": "^1.0.8",
    "scroll-restoration-polyfill": "^0.6.1",
    "scss-to-json": "^2.0.0",
    "smoothscroll-polyfill": "^0.4.4",
    "uuid": "^3.3.3"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "eslint": "^6.7.2",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-promise": "^4.2.1",
    "mocha": "^6.2.2",
    "mockdate": "^2.0.5",
    "seedrandom": "^3.0.5",
    "xml2js": "^0.4.22"
  }
}
