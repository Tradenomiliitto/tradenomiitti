{
  "plugins": [
    "promise"
  ],
  "extends": "airbnb-base",
  "env": {
    "node": true,
    "mocha": true
  },
  "rules": {
    "arrow-parens": ["error", "as-needed"],
    "new-cap": 0,
    "object-shorthand": 0,
    "global-require": 0,
    "promise/always-return": 2,
    "promise/no-return-wrap": 2,
    "promise/param-names": 2,
    "promise/catch-or-return": 2,
    "promise/no-native": 0
  }
}
